{
  "skill": "lint-clean-markdown",
  "inheritance": "inheritable",
  "description": "Write markdown that passes linting on first attempt",
  "connections": [
    {
      "target": ".github/skills/markdown-mermaid/SKILL.md",
      "type": "complements",
      "strength": 0.9,
      "bidirectional": true,
      "context": "Mermaid diagrams must also follow lint rules"
    },
    {
      "target": ".github/skills/architecture-refinement/SKILL.md",
      "type": "enables",
      "strength": 0.9,
      "context": "All architecture documentation must be lint-clean"
    },
    {
      "target": ".github/skills/writing-publication/SKILL.md",
      "type": "supports",
      "strength": 0.7,
      "context": "Lint-clean is baseline for documentation excellence"
    }
  ],
  "triggers": [
    "creating markdown file",
    "editing documentation",
    "writing lists or tables",
    "adding code blocks"
  ],
  "rules": {
    "MD032": "Blank lines around lists",
    "MD031": "Blank lines around code blocks",
    "MD022": "Blank lines around headings",
    "MD004": "Use dash for unordered lists",
    "MD009": "No trailing whitespace",
    "MD047": "Single newline at file end"
  },
  "$schema": "../SYNAPSE-SCHEMA.json",
  "schemaVersion": "2.0.0"
